<h1>Articles Tagged with <%= @tag.name %></h1>

<% if logged_in? %>
	<%= link_to "delete tag", tag_path(@tag), method: :delete, data: {confirm: "Are you sure you want to delete this tag?"} %>
<% end %>

<ul>
	<% @tag.articles.each do |article| %>
	  <li><%= link_to article.title, article_path(article) %></li>
	<% end %>
</ul>